{
    "name": "autotrim",
    "displayName": "AutoTrim",
    "description": "Automatically trims trailing whitespace from edited lines",
    "version": "1.1.1",
    "publisher": "chrisant996",
    "license": "MIT license (see LICENSE file)",
    "repository": {
        "type": "git",
        "url": "https://github.com/chrisant996/vscode-autotrim"
    },
    "engines": {
        "vscode": "^1.43.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*",
        "autotrim.pauseFile"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands":[
            {
                "command": "autotrim.pauseFile",
                "icon": "$(debug-pause)",
                "title": "Pause autotrim for current file",
                "when": "editorTextFocus"
            }
        ],
        "configuration": [
            {
                "title": "AutoTrim",
                "properties": {
                    "autotrim.debugMode": {
                        "type": "number",
                        "default": 0,
                        "enum": [
                            0, 
                            1, 
                            2
                        ],
                        "enumDescriptions": [
                            "debug mode is off", 
                            "logging is enabled", 
                            "do not alter files, and logging is enabled"
                        ],
                        "description": "enable debug mode"
                    },
                    "autotrim.statusBar": {
                        "type": "boolean",
                        "default": true,
                        "description": "show status bar item that allows enabling or pausing automatic trimming"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^3.7.5",
        "vscode": "^1.1.36",
        "@types/node": "^6.0.40"
    }
}
